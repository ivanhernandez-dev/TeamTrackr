<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\TeamTrackr\Employees\Domain\Employee" table="employees">
        <embedded name="id" class="App\TeamTrackr\Employees\Domain\ValueObject\EmployeeId" use-column-prefix="false" />
        <embedded name="first_name" class="App\TeamTrackr\Employees\Domain\ValueObject\EmployeeFirstName" use-column-prefix="false" />
        <embedded name="last_name" class="App\TeamTrackr\Employees\Domain\ValueObject\EmployeeLastName" use-column-prefix="false" />
        <embedded name="gender" class="App\TeamTrackr\Employees\Domain\ValueObject\EmployeeGender" use-column-prefix="false" />
        <embedded name="birth_date" class="App\TeamTrackr\Employees\Domain\ValueObject\EmployeeBirthDate" use-column-prefix="false" />
        <embedded name="hire_date" class="App\TeamTrackr\Employees\Domain\ValueObject\EmployeeHiredDate" use-column-prefix="false" />
    </entity>

</doctrine-mapping>